<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-DEBUG}"/>

    <include resource="logback/console_appender.xml"/>

    <!-- 기본: 콘솔 출력 -->
    <springProfile name="!file">
        <root level="${LOG_LEVEL}">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- 파일 로깅 활성화: SPRING_PROFILES_INCLUDE=file -->
    <springProfile name="file">
        <include resource="logback/basic_rolling_appender.xml"/>
        <include resource="logback/error_rolling_appender.xml"/>

        <root level="${LOG_LEVEL}">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="INFO_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </root>
    </springProfile>
</configuration>
